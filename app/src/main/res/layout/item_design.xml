<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scholarship_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_scholarship_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scholarship Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_provider_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider Name:"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_application_start_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Start Date: "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_application_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2022"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_application_end_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Application End Date: "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_application_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/02/2022"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_elegibility_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elibility"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_elegibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UG"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount: $5000"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfull_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viewfullcourse"
            android:background="@color/black"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>